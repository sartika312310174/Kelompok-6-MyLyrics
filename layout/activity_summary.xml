<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ungu"
    android:padding="16dp">

    <!-- Input lirik lagu -->
    <EditText
        android:id="@+id/etLyrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="Masukkan lirik lagu di sini"
        android:minLines="4"
        android:gravity="top" />

    <!-- Tombol untuk merangkum lirik -->

    <!-- Hasil ringkasan ditampilkan di sini -->
    <Button
        android:id="@+id/btnSummarize"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_summary" />

    <TextView
        android:id="@+id/tvSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Hasil ringkasan akan tampil di sini"
        android:layout_marginTop="16dp" />


</LinearLayout>
