<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/lyrics_page">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Lagu"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/artistTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artis: Tidak tersedia"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/lyricsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lirik tidak tersedia"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="10dp"/>
    </ScrollView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/favoriteButton"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:background="@drawable/button_favorite"
            android:onClick="addToFavorites" />

        <Button
            android:id="@+id/shareButton"
            android:background="@drawable/share_button"
            android:layout_width="80dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/openSpotifyButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/spotify"/>

        <Button
            android:id="@+id/openYoutubeButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/youtube_logo"/>


    </LinearLayout>


</LinearLayout>